{% set page = 'gallery' %}
{% extends 'parts/layout.njk' %}

{% import './code/' + page + '-code.njk' as fn %}
{% block main %}
  {% for item in [
    'num',
    'num-0px',
    'child',
    'direction',
    'center-align',
    'percentage-gutter',
    'rem-gutter',
    'map'
  ] %}
    
    <div class="{{ item }}">
      {% if item === 'child' %}
        <div data-margin>
          {% for i in range(1, 9) %}
          <div class="order"><div class="cell" data-content></div></div>
          {% endfor %}
        </div>
      {% else %}
        <ul data-margin>
          {% for i in range(1, 9) %}
          <li class="order autoheight"><div class="cell" data-content></div></li>
          {% endfor %}
        </ul>
      {% endif %}

      {# code #}
      <pre><code class="language-scss">
        {%- filter trim %}{{ fn.get(item) }}{% endfilter -%}
      </code></pre>
    </div>
  {% endfor %}

{% endblock %}
