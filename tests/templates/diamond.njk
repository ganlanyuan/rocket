{% set page = 'diamond' %}
{% extends 'parts/layout.njk' %}

{% macro box(number) %}
  {% for i in range(1, number + 1) %}
  <div class="order"><div class="diamond-content" data-content><span><img src="images/diamond/{{ i }}.jpg" alt=""></span></div></div>
  {% endfor %}
{% endmacro %}

{% import 'code/' + page + '-code.njk' as fn %}
{% block main %}
  {% for item, number in {
    'diamond-count': 5,
    'diamond-count-combined': 7,
    'diamond-size': 8,
    'diamond-breakpoints': 4,
    'octagon-count': 6,
    'octagon-size': 6
  } %}
  
    <div class="{{ item }} demo">
      {{ box(number) }}
    </div>
    <pre><code class="language-scss">
      {%- filter trim %}{{ fn.get(item) }}{% endfilter -%}
    </code></pre>
  {% endfor %}
{% endblock %}