{% set page = 'color-functions' %}
{% extends 'parts/layout.njk' %}

{% import 'code/' + page + '-code.njk' as fn %}
{% block main %}
  <h4>Contrast</h4>
  <div class="contrast clearfix three">
    <div class="color-box color-box-contrast-1">contrast</div>
    <div class="color-box color-box-contrast-2">contrast</div>
    <div class="color-box color-box-contrast-3">contrast</div>
  </div>
  <pre><code class="language-scss">
    {%- filter trim %}{{ fn.get('contrast') }}{% endfilter -%}
  </code></pre>
  
  <h4>Analogous</h4>
  <div class="example-analogous clearfix three">
    <div class="color-box color-box-analogous-1"></div>
