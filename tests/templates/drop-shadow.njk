{% set page = 'drop-shadow' %}
{% extends 'parts/layout.njk' %}

{% import 'code/' + page + '-code.njk' as fn %}
{% block main %}
  {% for item in [
    'lifted',
    'raised',
    'perspective',
    'curve-left',
    'curve-right',
    'curve-horizontal',
    'curve-top',
    'curve-bottom',
    'curve-vertical'
  ] %}
    
    <div class="box {{ item }}">{{ item | replace('-', ' ') }}</div>
    <pre><code class="language-scss">
      {%- filter trim %}{{ fn.get(item) }}{% endfilter -%}
    </code></pre>
  {% endfor %}
{% endblock %}